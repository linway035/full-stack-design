<div class="setting-container">
  <div class="setting-title">
    <h4>帳戶設定</h4>
  </div>
  <form class="form-setting" action="/register" method="POST">
    <div class="input-setting top">
      <label class="label" for="account">帳號</label>
      <input class="input" id="account" type="text" name="account" placeholder="請輸入帳號" required>
    </div>
    <div class="input-setting">
      <label class="label" for="name">名稱</label>
      <input class="input" id="name" type="text" name="name" placeholder="請輸入使用者名稱" required>
    </div>
    <div class="input-setting">
      <label class="label" for="email">Email</label>
      <input class="input" id="email" type="password" name="email" placeholder="請輸入 Email" required>
    </div>
    <div class="input-setting">
      <label class="label" for="password">密碼</label>
      <input class="input" id="password" type="password" name="password" placeholder="請輸入密碼" required>
    </div>
    <div class="input-setting">
      <label class="label" for="password-check">密碼確認</label>
      <input class="input" id="password-check" type="password" name="password-check" placeholder="請再次輸入密碼" required>
    </div>
    <button class="setting-btn" type="submit">儲存</button>
  </form>
</div>